</script>

<% @graph.notes.each do |n| %>
  <!-- Traditional view commented out
  <div style="background-color:<%= n.color %>; layer-background-color:<%= n.color %>;">
    <h4><%= n.name %></h4>
    <p><%= (RedCloth.new n.article.content).to_html %></p>
